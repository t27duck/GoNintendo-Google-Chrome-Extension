{
  "name" : "GoNintendo",
  "version" : "1.0.2",
  "description" : "The Official Chrome Extension of GoNintendo.com",
  "omnibox": { "keyword" : "gn" },
  
  "icons" : {
    "16" : "images/icon_16.png",
    "48" : "images/icon_48.png",
    "128" : "images/icon_128.png"
  },
  "browser_action" : {
    "default_icon" : "images/icon_48.png",
    "default_title" : "GoNintendo",
    "default_popup" : "popup.html"
  },
  "permissions" : [ 
    "http://*.gonintendo.com/*",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.gonintendo.com/*"],
      "exclude_globs": ["*boards*", "*mcc*"],
      "js": ["js/content_script_main_site.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://*.gonintendo.com/boards*"],
      "js": ["js/content_script_boards.js"],
      "run_at": "document_end"
    }
  ],
  "options_page" : "options.html",
  "background_page" : "background.html"
}
